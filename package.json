{
  "name": "stealth-browser",
  "version": "1.0.0",
  "description": "A lightweight, stealth web browser with advanced features",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-all": "npm run build-win",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-installer": "electron-builder --win nsis",
    "build-portable": "electron-builder --win portable",
    "build-simple": "electron-builder --win portable --config.win.target=portable",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist || rmdir /s /q dist 2>nul || echo Clean completed"
  },
  "keywords": [
    "browser",
    "electron",
    "stealth",
    "privacy"
  ],
  "author": "StealthBrowser",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.stealthbrowser.app",
    "productName": "StealthBrowser",
    "directories": {
      "output": "dist"
    },
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
          "extraResources": [
            {
              "from": "type_word.exe",
              "to": "type_word.exe"
            }
          ],
          "extraFiles": [
            {
              "from": "type_word.exe",
              "to": "type_word.exe"
            }
          ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StealthBrowser",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "artifactName": "StealthBrowser-Setup-${version}.exe",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "portable": {
      "artifactName": "StealthBrowser-Portable-${version}.exe"
    }
  }
}
