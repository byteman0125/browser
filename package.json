{
  "name": "stealth-browser",
  "version": "1.0.0",
  "description": "A lightweight, stealth web browser with advanced features",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": ["browser", "electron", "stealth", "privacy"],
  "author": "StealthBrowser",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.stealthbrowser.app",
    "productName": "StealthBrowser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "portable": {
      "artifactName": "StealthBrowser-Portable.exe"
    }
  }
}
